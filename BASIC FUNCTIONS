A)
#include<graphics.h>
#include<conio.h>
main(){
int gd = DETECT,gm;
initgraph(&gd,&gm,"C:\\TC\\BGI");
outtext("Rehman Khan 34:\n");
arc(100,100,0,135,50);
getch();
closegraph();
return 0;
}



B)
#include <graphics.h>
#include <conio.h>
int main() {
int gd = DETECT, gm;
int points[] = {320, 150, 420, 300, 250, 300,320, 150};
initgraph(&gd, &gm, "C:\\TC\\BGI");
outtext("Rehman Khan 34:\n");
drawpoly(4, points);
getch();
closegraph();
return 0;
}



